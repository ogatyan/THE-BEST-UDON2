<div class="registercontainar">
  <div class="registerblock">
    <h2>新規登録</h2>
  </div>
  <div class="yourinfotmation">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="nicknamefrom">
        <div class="field1">
          <%= f.label :ニックネーム %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field2">
            <%= f.label :出身都道府県  %>
            <%= f.select :prefecture, 
            [["香川県民", "香川県民"], 
            ["県外", "県外"] 
            ], include_blank: "選択して下さい" %>
        </div>
      </div>
      <div class="field3">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field4">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field5">
        <%= f.label :パスワード認証 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="regactions">
        <%= f.submit "アカウントを登録する" %>
      </div>
      <%= link_to "アカウントを既に登録済みの方", new_session_path(resource_name), class: "link-button" %>
    <% end %>
  </div>

</div>
