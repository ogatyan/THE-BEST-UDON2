<div class="mypageeditcontainer">
  <div class="edit-form-container">
    <h2>編集 </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <!-- 名前入力 -->
      <div class="field">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <!-- アイコン画像 -->
      <div class="field">
        <%= f.label :image, 'アイコン写真' %>
        <%= f.file_field :image %>
      </div>

      <!-- プロフィール -->
      <div class="field">
        <%= f.label :profile, 'プロフィール' %>
        <%= f.text_area :profile, autofocus: true %>
      </div>

      <!-- メールアドレス -->
      <div class="field">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="field">
          現在の確認待ちメールアドレス: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <!-- 新しいパスワード -->
      <div class="field">
        <%= f.label :password, 'パスワード' %> <i>(変更しない場合は空欄でOK)</i>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %>文字以上</em>
        <% end %>
      </div>

      <!-- パスワード確認 -->
      <div class="field">
        <%= f.label :password_confirmation, 'パスワードの確認' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <!-- 現在のパスワード -->
      <div class="field">
        <%= f.label :current_password, '現在のパスワード' %> <i>(変更確認のため必要です)</i>
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <!-- 更新ボタン -->
      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>

    <!-- キャンセル・戻るリンク -->
    <div class="cancel-button">
      <%= button_to "変更をキャンセルする", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete %>
    </div>

    <div class="cancel-button">
      <%= link_to "戻る", request.referer || root_path %>
    </div>
  </div>
</div>