<h1 class="newpagetitle">
  THE BEST UDON
</h1>
<h3>うどん投稿の編集</h3>

<div class="toukoucontainar">
  <%= form_for @tweet do |f| %>
    <div class="field">
      <%= f.label :genre, "ジャンル" %>
      <%= f.select :genre, 
        [
          ["ダシ", "ダシタイプ"],
          ["コシ", "コシタイプ"],
          ["具材", "具材タイプ"],
          ["スピード", "スピードタイプ"]
        ], include_blank: "選択して下さい" %>
    </div>

    <div class="field">
      <%= f.label :shop_name, "店舗名" %>
      <%= f.text_field :shop_name, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :shop_place, "店舗の場所" %>
      <%= f.select :shop_place,
        [
          ["東かがわ市", "東かがわ市"],
          ["さぬき市", "さぬき市"],
          ["三木町", "三木町"],
          ["高松市", "高松市"],
          ["直島町", "直島町"],
          ["宇多津町", "宇多津町"],
          ["綾川町", "綾川町"],
          ["まんのう町", "まんのう町"],
          ["琴平町", "琴平町"],
          ["坂出市", "坂出市"],
          ["丸亀市", "丸亀市"],
          ["善通寺市", "善通寺市"],
          ["多度津町", "多度津町"],
          ["観音寺市", "観音寺市"],
          ["三豊市", "三豊市"],
          ["土庄町", "土庄町"],
          ["小豆島町", "小豆島町"]
        ], include_blank: "選択して下さい" %>
    </div>

    <div class="field">
      <%= f.label :foods, "メニュー" %>
      <%= f.text_field :foods, size: 30 %>
    </div>

    <div class="field">
      <%= f.label :parking, "駐車場の数" %>
      <%= f.select :parking,
        [
          ["なし", "なし"],
          ["1〜5台", "1〜5台"],
          ["6〜10台", "6〜10台"],
          ["11〜20台", "11〜20台"],
          ["21台以上", "21台以上"]
        ],
        include_blank: "選択して下さい" %>
    </div>

    <div class="field">
      <%= f.label :open_close, "来店時間" %>
      <%= f.select :open_close,
        [
          ["5:00〜6:00", "5:00〜6:00"],
          ["6:00〜7:00", "6:00〜7:00"],
          ["7:00〜8:00", "7:00〜8:00"],
          ["8:00〜9:00", "8:00〜9:00"],
          ["9:00〜10:00", "9:00〜10:00"],
          ["10:00〜11:00", "10:00〜11:00"],
          ["11:00〜12:00", "11:00〜12:00"],
          ["12:00〜13:00", "12:00〜13:00"],
          ["13:00〜14:00", "13:00〜14:00"],
          ["14:00〜15:00", "14:00〜15:00"],
          ["15:00〜16:00", "15:00〜16:00"],
          ["16:00〜17:00", "16:00〜17:00"],
          ["17:00〜18:00", "17:00〜18:00"],
          ["18:00〜19:00", "18:00〜19:00"],
          ["19:00〜20:00", "19:00〜20:00"],
          ["20:00〜21:00", "20:00〜21:00"],
          ["21:00〜22:00", "21:00〜22:00"],
          ["22:00〜23:00", "22:00〜23:00"],
          ["23:00〜0:00", "23:00〜0:00"],
          ["0:00〜1:00", "0:00〜1:00"],
          ["1:00〜2:00", "1:00〜2:00"],
          ["2:00〜2:30", "2:00〜2:30"]
        ],
        include_blank: "選択して下さい" %>
    </div>

    <div class="field">
      <%= f.label :price, "価格" %>
      <div style="display: inline-flex; align-items: center;">
        <%= f.number_field :price, size: 10 %>
        <span style="margin-left: 4px;">円</span>
      </div>
    </div>

    <div class="field">
      <%= f.label :image, "写真を変更する場合は再アップ" %>
      <%= f.file_field :image %>
    </div>

    <%= f.submit "編集する" %>
  <% end %>

  <%= link_to "一覧に戻る", tweets_path %>
</div>
